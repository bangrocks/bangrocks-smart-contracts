{
  "name": "@bangrocks/smart-contracts",
  "version": "0.2.0",
  "private": true,
  "description": "Bangrocks Smart Contracts Repo",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "hardhat test",
    "deploy-rinkeby": "npx hardhat run scripts/deploy.js --network rinkeby",
    "deploy-local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy-avalanche": "npx hardhat run scripts/deploy.js --network avalanche",
    "dev-contracts": "nodemon -e sol --delay 3 --watch contracts --exec \"npx hardhat run scripts/deploy.js --network localhost\"",
    "dev-node": "npx hardhat node",
    "dev-console": "npx hardhat console"
  },
  "keywords": [
    "hardhat",
    "ethereum",
    "hackathon"
  ],
  "author": "Samuel Hunter",
  "homepage": "https://bang.rocks/about",
  "devDependencies": {
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.2.0",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "chai": "^4.2.0",
    "ethereum-waffle": "^3.1.1",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.3",
    "hardhat-preprocessor": "^0.1.4",
    "husky": "^4.2.5",
    "web3": "^1.5.0"
  }
}
